using Insight.BuildingBlocks.Domain;

namespace Insight.Declarations.Domain.Incoming
{
    public sealed class $ValueObjectName$ : ValueObject
    {
        public DateOnly Value { get; private set; }

        private $ValueObjectName$()
        {
            Value = DateOnly.MinValue;
        }

        private $ValueObjectName$(DateOnly value)
        {
            Value = value;
        }

        public static $ValueObjectName$ Create(DateOnly value)
        {
            return new $ValueObjectName$(value);
        }

        public static $ValueObjectName$ Empty()
        {
            return new $ValueObjectName$();
        }
        
